// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  name String
  priceInCents Int
  filePath String
  imagePath String
  description String
  isAvailableForPurchase Boolean
  createdAt DateTime
  updatedAt DateTime
}